{
  "name": "pencraft-blog",
  "version": "1.0.0",
  "description": "Advanced Blogging Platform with WebGL Effects",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
